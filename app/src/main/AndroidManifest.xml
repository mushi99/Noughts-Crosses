<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merp.chillhai">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChillHai">
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".OnlineGameActivity"/>
        <activity android:name=".InGameActivity"/>
        <activity android:name=".ComputerGameActivity"/>
        <activity android:name=".HowToPlay"/>
    </application>

</manifest>